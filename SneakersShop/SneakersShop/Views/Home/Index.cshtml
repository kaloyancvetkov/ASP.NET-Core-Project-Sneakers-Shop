@model IndexViewModel

@{
    ViewData["Title"] = "Welcome!";
}


@if (!Model.Sneakers.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best footwear store!</h1>
        <p class="lead">There are no cars in the system currently available so why don't you just add one?</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Sneakers" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Sneakers</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Sneakers.Count; i++)
        {
            var sneakers = Model.Sneakers[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" src="@sneakers.ImageUrl" alt="@sneakers.Brand @sneakers.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@sneakers.Price$ @sneakers.Brand @sneakers.Model</h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="prev">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="row">
    <div class="col-12 text-center">
        <button class="btn btn-primary" id="statistics-button">Show Statistics</button>
    </div>
</div>

<div class="mb-5"></div>


<div class="bottom-div">
    <div class="row" style>
        <h2 class="col-md-4 text-center">
            @Model.TotalSneakers Sneakers
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalPurchases Purchases
        </h2>
    </div>
</div>

