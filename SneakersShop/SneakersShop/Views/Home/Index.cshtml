@model IndexViewModel

@{
    ViewData["Title"] = "Welcome!";
}

@{
    var sneakers = Model.Sneakers;
    var firstSneakers = sneakers.Any() ? sneakers[0] : null;
    var secondSneakers = sneakers.Count > 1 ? sneakers[1] : null;
    var thirdSneakers = sneakers.Count > 2 ? sneakers[2] : null;
}

@if (!sneakers.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best footwear store!</h1>
        <p class="lead">There are no cars in the system currently available so why don't you just add one?</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Sneakers" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Sneakers</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @if (firstSneakers != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstSneakers.ImageUrl" alt="@firstSneakers.Brand @firstSneakers.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@firstSneakers.Price$ @firstSneakers.Brand @firstSneakers.Model</h5>
                </div>
            </div>
        }
        @if (secondSneakers != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondSneakers.ImageUrl" alt="@secondSneakers.Brand @secondSneakers.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@secondSneakers.Price$ @secondSneakers.Brand @secondSneakers.Model</h5>
                </div>
            </div>
        }
        @if (thirdSneakers != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdSneakers.ImageUrl" alt="@thirdSneakers.Brand @thirdSneakers.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@thirdSneakers.Price$ @thirdSneakers.Brand @thirdSneakers.Model</h5>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="mb-5"></div>

<div class="bottom-div">
    <div class="row" style>
        <h2 class="col-md-4 text-center">
            @Model.TotalSneakers Sneakers
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalPurchases Purchases
        </h2>
    </div>
</div>

