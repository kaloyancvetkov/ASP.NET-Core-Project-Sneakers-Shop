@model SneakerDetailsServiceModel

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">@Model.Brand Sneakers</h3>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src=@Model.ImageUrl class="img-responsive"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Product description</h4>
                    <p>@Model.Description</p>
                    <h2 class="mt-5">
                        @Model.Price$<small class="text-success"></small>
                    </h2>
                    <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                        <i class="fa fa-shopping-cart"></i>
                    </button>
                    <button class="btn btn-primary btn-rounded">Buy Now</button>
                    </ul>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="390">Brand</td>
                                    <td>@Model.Brand</td>
                                </tr>
                                <tr>
                                    <td width="390">Model</td>
                                    <td>@Model.Model</td>
                                </tr>
                                <tr>
                                    <td width="390">Category</td>
                                    <td>@Model.CategoryName</td>
                                </tr>
                                <tr>
                                    <td width="390">Color</td>
                                    <td>@Model.Color</td>
                                </tr>
                                <tr>
                                    <td width="390">Seller</td>
                                    <td>@Model.SellerName</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>